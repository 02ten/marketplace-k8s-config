{
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "router": {
      "return_error_msg": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/auth/login",
      "method": "POST",
      "output_encoding": "json",
      "concurrent_calls": 1,
      "backend": [
        {
          "url_pattern": "/api/auth/login",
          "host": ["http://auth.auth:8900"],
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/api/auth/register",
      "method": "POST",
      "output_encoding": "json",
      "concurrent_calls": 1,
      "backend": [
        {
          "url_pattern": "/api/auth/register",
          "host": ["http://auth.auth:8900"],
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/api/hello/user",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "roles": ["USER"],
          "roles_key": "roles",
          "cache": false,
          "disable_jwk_security": true,
          "operation_debug": true
        }
      },
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/api/hello/user",
          "method": "GET",
          "host": ["http://auth.auth:8900"],
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/hello/admin",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "disable_jwk_security": true,
          "roles": ["ADMIN"],
          "roles_key": "roles",
          "operation_debug": true
        }
      },
      "backend": [
        {
          "url_pattern": "/api/hello/admin",
          "host": ["http://auth.auth:8900"],
          "encoding": "string"
        }
      ]
    }
  ]
}