{
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/auth/login",
      "method": "POST",
      "output_encoding": "string",
      "concurrent_calls": 1,
      "backend": [
        {
          "url_pattern": "/api/auth/login",
          "host": ["http://auth.auth:8900"],
          "encoding": "string"
        }
      ]
    },
    {
      "endpoint": "/api/auth/register",
      "method": "POST",
      "output_encoding": "string",
      "concurrent_calls": 1,
      "backend": [
        {
          "url_pattern": "/api/auth/register",
          "host": ["http://auth.auth:8900"],
          "encoding": "string"
        }
      ]
    },
    {
      "endpoint": "/api/hello/user",
      "method": "GET",
      "output_encoding": "string",
      "concurrent_calls": 1,
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "disable_jwk_security": true,
          "roles": ["USER"]
        }
      },
      "backend": [
        {
          "url_pattern": "/api/hello/user",
          "host": ["http://auth.auth:8900"],
          "encoding": "string"
        }
      ]
    },
    {
      "endpoint": "/hello/admin",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "disable_jwk_security": true,
          "roles": ["ADMIN"]
        }
      },
      "backend": [
        {
          "url_pattern": "/api/hello/admin",
          "host": ["http://auth.auth:8900"],
          "encoding": "string"
        }
      ]
    }
  ]
}