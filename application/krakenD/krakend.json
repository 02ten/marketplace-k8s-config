{
  "version": 3,
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    },
    "router": {
      "return_error_msg": true
    },
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "HEAD",
        "POST",
        "DELETE",
        "PUT"
      ],
      "expose_headers": [
        "*"
      ],
      "allow_headers": [
        "*"
      ],
      "max_age": "12h",
      "allow_credentials": true,
      "debug": false
    }
  },
  "endpoints": [
    {
      "endpoint": "/api/auth/login",
      "method": "POST",
      "output_encoding": "no-op",
      "concurrent_calls": 1,
      "backend": [
        {
          "url_pattern": "/api/auth/login",
          "host": ["http://auth.auth:8900"]
        }
      ]
    },
    {
      "endpoint": "/api/auth/register",
      "method": "POST",
      "output_encoding": "no-op",
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "method": "POST",
          "url_pattern": "/api/auth/register",
          "host": ["http://auth.auth:8900"]
        }
      ]
    },
    {
      "endpoint": "/api/auth/token",
      "method": "POST",
      "output_encoding": "no-op",
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "method": "POST",
          "url_pattern": "/api/auth/token",
          "host": ["http://auth.auth:8900"]
        }
      ]
    },
    {
      "endpoint": "/api/category",
      "method": "POST",
      "output_encoding": "no-op",
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "method": "POST",
          "url_pattern": "/api/category",
          "host": ["http://catalog.catalog:8901"]
        }
      ]
    },
    {
      "endpoint": "/api/product/category/{categoryId}",
      "method": "POST",
      "output_encoding": "no-op",
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "method": "POST",
          "url_pattern": "/api/product/category/{categoryId}",
          "host": ["http://catalog.catalog:8901"]
        }
      ]
    },
    {
      "endpoint": "/api/hello/user",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "roles": ["USER", "ADMIN"],
          "roles_key": "roles",
          "cache": false,
          "disable_jwk_security": true,
          "operation_debug": true
        }
      },
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/api/hello/user",
          "method": "GET",
          "host": ["http://auth.auth:8900"],
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/hello/admin",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "disable_jwk_security": true,
          "roles": ["ADMIN"],
          "roles_key": "roles",
          "operation_debug": true
        }
      },
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/api/hello/admin",
          "host": ["http://auth.auth:8900"],
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/personal/account",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "disable_jwk_security": true,
          "roles": ["USER","ADMIN"],
          "roles_key": "roles",
          "cache": false,
          "operation_debug": true
        }
      },
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/api/personal/account/{JWT.id}",
          "method": "GET",
          "host": ["http://personal.personal:8902"],
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/my/product",
      "method": "POST",
      "output_encoding": "string",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "disable_jwk_security": true,
          "roles": ["SELLER"],
          "roles_key": "roles",
          "cache": false,
          "operation_debug": true
        }
      },
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/api/product/{JWT.id}",
          "method": "POST",
          "host": ["http://seller-service.seller-service:8903"],
          "encoding": "string"
        }
      ]
    },
    {
      "endpoint": "/my/product/{productId}",
      "method": "DELETE",
      "output_encoding": "no-op",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "disable_jwk_security": true,
          "roles": ["SELLER"],
          "roles_key": "roles",
          "cache": false,
          "operation_debug": true
        }
      },
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/api/product/{JWT.id}/{productId}",
          "method": "DELETE",
          "host": ["http://seller-service.seller-service:8903"]
        }
      ]
    },
    {
      "endpoint": "/my/product",
      "method": "GET",
      "output_encoding": "json",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "disable_jwk_security": true,
          "roles": ["SELLER"],
          "roles_key": "roles",
          "cache": false,
          "operation_debug": true
        }
      },
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/api/product/{JWT.id}",
          "method": "GET",
          "is_collection": true,
          "host": ["http://seller-service.seller-service:8903"],
          "encoding": "json"
        }
      ]
    },
    {
      "endpoint": "/my/product/{productId}",
      "method": "GET",
      "output_encoding": "no-op",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "disable_jwk_security": true,
          "roles": ["SELLER"],
          "roles_key": "roles",
          "cache": false,
          "operation_debug": true
        }
      },
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/api/product/{JWT.id}/{productId}",
          "method": "GET",
          "host": ["http://seller-service.seller-service:8903"]
        }
      ]
    },
    {
      "endpoint": "/my/product/{productId}",
      "method": "PUT",
      "output_encoding": "no-op",
      "extra_config": {
        "auth/validator": {
          "alg": "HS512",
          "jwk_local_path": "/etc/krakend/keys.json",
          "disable_jwk_security": true,
          "roles": ["SELLER"],
          "roles_key": "roles",
          "cache": false,
          "operation_debug": true
        }
      },
      "concurrent_calls": 1,
      "input_headers": ["*"],
      "backend": [
        {
          "url_pattern": "/api/product/{JWT.id}/{productId}",
          "method": "PUT",
          "host": ["http://seller-service.seller-service:8903"]
        }
      ]
    }
  ]
}